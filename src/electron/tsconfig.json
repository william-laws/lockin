{
    "compilerOptions": {
      // require strict types (null-save)
      "strict": true,
      // tell TypeScript to generate CommonJS for Electron main process
      "target": "ES2020",
      // tell TypeScript to use CommonJS module system
      "module": "CommonJS",
      // define where to put generated JS
      "outDir": "../../dist-electron",
      // ignore errors from dependencies
      "skipLibCheck": true
    }
}